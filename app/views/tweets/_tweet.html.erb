<% i ||= 1 %>

<div id="tweet_<%= tweet.id %>" class="tweet <%= odd_or_even(i) %>">
  <p class="content"><%= tweet.content %></p>
  <div class="user_and_moment">
    <span class="user">
      <%= t(:by) %> <%= link_to tweet.user.name, tweet.user %>
    </span>
    <span class="moment">
      <%= distance_of_time_in_words(tweet.created_at, Time.now) %>
    </span>
  </div>
</div>  
