<%= form_for @tweet, {:remote => true} do |f| %>

  <%= render '/shared/error_messages', :target => @tweet %>

  <div class="field">
    <%= f.label :content, 'What is happening?' %><br />
    <%= f.text_area :content, :size => '55x2' %>
  </div>
  <div class="actions">
    <%= f.submit 'Tweet!' %>
  </div>
<% end %>
